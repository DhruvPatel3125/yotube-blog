<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./head.ejs') %>
        <title>Blog</title>
</head>

<body>
    <%- include('./nav.ejs') %>

        <div class="container mt-4">
            <h1>
                <%= blog.title %>
            </h1>
            <img src="<%=blog.coverImageURL %>" class="blog-image" />
            <pre class="mt-3"><%= blog.body %></pre>
        </div>
        <div class="container mt-4">
            <% if (blog.createdBy) { %>
                <img style="border-radius: 50%" src="<%= blog.createdBy.profileImageURL %>" width="50px"
                    alt="<%= blog.createdBy.fullName %>">
                <span>
                    <%= blog.createdBy.fullName %>
                </span>
                <% } %>
        </div>
        
        <% if (locals.user && blog.createdBy && locals.user._id.toString() === blog.createdBy._id.toString()) { %>
            <div class="mt-2">
                <a href="/blog/edit/<%= blog._id %>" class="btn btn-secondary btn-sm me-2">Edit</a>
                <form action="/blog/<%= blog._id %>?_method=DELETE" method="post" class="d-inline">
                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                </form>
            </div>
        <% } %>

        <div class="container mt-3">
            <h1>Comments(<%= comments.length %>)</h1>
            <% if (locals.user) { %>
                <form action="/blog/comment/<%= blog._id %>" method="post">
                    <div class="mb-3">

                        <input type="text" name="content" class="form-control" placeholder="Enter Your Comment">
                        <button class="btn btn-sm btn-primary" type="submit">Add</button>
                    </div>
                </form>
            <% } %>
            
            <% if (comments.length > 0) { %>
                <div class="mt-4">
                    <% comments.forEach(comment => { %>
                        <div class="d-flex align-items-center mb-3">
                            <% if (comment.createdBy) { %>
                                <img style="border-radius: 50%" src="<%= comment.createdBy.profileImageURL %>" width="30px"
                                    alt="<%= comment.createdBy.fullName %>" class="me-2">
                                <strong><%= comment.createdBy.fullName %>:</strong>
                            <% } else { %>
                                <strong>Anonymous User:</strong>
                            <% } %>
                            <p class="mb-0 ms-2"><%= comment.content %></p>
                        </div>
                    <% }) %>
                </div>
            <% } else { %>
                <p>No comments yet.</p>
            <% } %>
        </div>

        <%- include('./scripts.ejs') %>

</body>

</html>