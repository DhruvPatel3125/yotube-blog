<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs')  %>
    <title>Edit Blog</title>
</head>
<body>
     <%- include('./partials/nav.ejs')  %>
     <div class="container mt-3">
        <h2>Edit Blog Post</h2>
        <% if (typeof error !== "undefined") { %>
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
        <% } %>
        <form action="/blog/<%= blog._id %>?_method=PUT" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="coverImage" class="form-label">Cover Image (Optional - leave blank to keep current)</label>
                <input type="file" name="coverImage" class="form-control" id="coverImage" aria-describedby="title">
            </div>
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" name="title" class="form-control" id="title" aria-describedby="title" value="<%= blog.title %>" required>
            </div>
            <div class="mb-3">
                <label for="body">Body</label>
                <textarea name="body" class="form-control"id="body" required><%= blog.body %></textarea>
            </div>
            <div class="mb-3">
              <button type="submit" class="btn btn-primary">Update Blog</button>
            </div>    
        </form>
     </div>
     <%- include('./partials/scripts.ejs')  %>
</body>
</html> 